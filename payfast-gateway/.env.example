# ===============================================
# PayFast Payment Gateway - Environment Variables
# ===============================================
# Copy this file to .env and fill in your values
# ===============================================

# ===== DATABASE CONFIGURATION =====
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://username:password@host:5432/database_name

# ===== PAYFAST CONFIGURATION =====
# Get these from your PayFast account:
# https://sandbox.payfast.co.za (testing)
# https://www.payfast.co.za (production)

PAYFAST_MERCHANT_ID=10000100
PAYFAST_MERCHANT_KEY=46f0cd694581a
PAYFAST_PASSPHRASE=jt7NOE43FZPn

# Set to "true" for sandbox/testing, "false" for production
PAYFAST_SANDBOX=true

# ===== APPLICATION CONFIGURATION =====
# Your application's base URL (used for return/cancel/notify URLs)
# Replit will auto-set REPLIT_DEV_DOMAIN, but you can override here
APP_BASE_URL=

# Server port (default: 3000)
PORT=3000

# ===============================================
# NOTES:
# ===============================================
# 1. NEVER commit the .env file to version control
# 2. For PayFast sandbox testing, use the default credentials above
# 3. For production, replace with your own PayFast credentials
# 4. The passphrase is optional but HIGHLY recommended for security
# 5. Make sure your DATABASE_URL points to a PostgreSQL database
# ===============================================
